{% extends "base-admin.html.twig" %}

{% block body %}
<main class="container py-5">
            <h1 class="mb-5">edite menu</h1>
            <form action="index.php?route=admin-check-modifier-menu" method="post" class="mt-3" enctype="multipart/form-data">
               
                <input type="hidden" id="id" name="id" value="{{ menu.id }}" />
                <fieldset class="mb-4">
                    <label for="name" class="form-label">
                       Nom du plat
                    </label>
                    <input id="name" name="name" type="text" class="form-control" value="{{ menu.name }}"/>
                </fieldset>
                
                <fieldset class="mb-4">
                    <label for="ingredients" class="form-label">Ingredients</label>
                    <div id="ingredients">
                        {% for ingredient in ingredients %}
                            <input type="checkbox" name="ingredients[]" value="{{ ingredient.id }}"> {{ ingredient.name }}<br>
                        {% endfor %}
                    </div>
                </fieldset>
        
                <fieldset class="mb-4">
                    <label for="text" class="form-label">
                        Image 
                    </label>
                    <input id="image" name="image" type="file" class="form-control" value="{{ menu.picture }}" />
                </fieldset>
                <fieldset class="mb-4">
                    <label for="select" class="form-label">
                        Vegetarian
                    </label>
                    <select name="select" id="select" class="form-select">
                        <option selected>Choisir</option>
                       <option value="1">Plats de viande</option>
                        <option value="2">Plats végétarien</option>
                        <option value="3">Dessert</option>
                    </select>
                </fieldset>
                <fieldset>
                    <input type="submit" name="submit" class="btn btn-primary" value ="Modifier" />
                </fieldset>
                </form>
        </main>
                {% endblock %}