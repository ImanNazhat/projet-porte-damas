{% extends "base-admin.html.twig" %}

{% block body %}
<main class="container py-5">
            <h1 class="mb-5">creat menu</h1>
            <form action="index.php?route=admin-check-creer-menu" method="post" class="mt-3" enctype="multipart/form-data">
                <fieldset class="mb-4">
                    <label for="name" class="form-label">
                        Name du plat
                    </label>
                    <input id="name" name="name" type="text" class="form-control" />
                </fieldset>
                
                <fieldset class="mb-4">
                    <label for="ingredients" class="form-label">Ingredients</label>
                    <div id="ingredients">
                        {% for ingredient in ingredients %}
                            <input type="checkbox" name="ingredients[]" value="{{ ingredient.id }}"> {{ ingredient.name }}<br>
                        {% endfor %}
                    </div>
                </fieldset>
                 
                <fieldset class="mb-4">
                    <label for="text" class="form-label">
                        Image 
                    </label>
                    <input id="image" name="image" type="file" class="form-control"/>
                    
                </fieldset>
                <fieldset class="mb-4">
                    <label for="select" class="form-label">
                        Vegetarian
                    </label>
                    <select name="select" id="select" class="form-select">
                        <option selected>Choisir</option>
                        <option value="1">Plats végétarien</option>
                        <option value="2">plats de viande</option>
                        <option value="3">Dessert</option>
                    </select>
                </fieldset>
                <fieldset>
                    <input type="submit" name="submit" class="btn btn-primary value ="Create" />
                </fieldset>
                </form>

        </main>
                {% endblock %}
                
               