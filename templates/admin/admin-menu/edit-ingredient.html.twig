{% extends "base-admin.html.twig" %}

{% block body %}
<main class="container py-5">
            <h1 class="mb-5">edite ingredient</h1>
            
            <form action="index.php?route=admin-check-modifier-ingredient" method="post" class="mt-3" enctype="multipart/form-data">
               
                <input type="hidden" id="id" name="id" value="{{ ingredient.id }}" />
                
                <fieldset class="mb-4">
                    <label for="name" class="form-label">
                       Name
                    </label>
                    <input id="name" name="name" type="text" class="form-control" value="{{ ingredient.name }}"/>
                </fieldset>
                  
                <fieldset>
                    <input type="submit" name="submit" class="btn btn-primary" value ="Modifier" />
                </fieldset>
                </form>
        </main>
                {% endblock %}