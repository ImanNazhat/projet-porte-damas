{% extends "base-admin.html.twig" %}

{% block body %}
<main class="container py-5">
            <h1 class="mb-5">edite menu</h1>
            <form action="index.php?route=admin-check-modifier-menu" method="post" class="mt-3">
               
                <input type="hidden" id="id" name="id" value="{{ menu.id }}" />
                <fieldset class="mb-4">
                    <label for="name" class="form-label">
                       Nom du plat
                    </label>
                    <input id="name" name="name" type="text" class="form-control" value="{{ menu.name }}"/>
                </fieldset>
                  <fieldset class="mb-4">
                    <label for="text" class="form-label">
                        Description
                    </label>
                    <input id="Description" name="Description" type="text" class="form-control" value="{{ menu.discription }}" />
                </fieldset>
<fieldset class="mb-4">
                    <label for="text" class="form-label">
                        Image URL
                    </label>
                    <input id="image-url" name="image-url" type="text" class="form-control" value="{{ menu.pictureUrl }}" />
                </fieldset>
<fieldset class="mb-4">
                    <label for="select" class="form-label">
                        Vegetarian
                    </label>
                    <select name="select" id="select" class="form-select">
                        <option selected>Choisir</option>
                        <option value="1" {% if menu.vegetarian == 1 %} selected {% endif %}>Oui</option>
                        <option value="2" {% if menu.vegetarian == 2 %} selected {% endif %}>Non</option>
                    </select>
                </fieldset>
                <fieldset>
                    <button type="submit" class="btn btn-primary">Modifier</button>
                </fieldset>
                </form>
        </main>
                {% endblock %}